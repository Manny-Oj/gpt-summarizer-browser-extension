{
  "manifest_version": 3,
  "name": "Bumblebeee GPT Summarizer",
  "description": "Simple browser tab summarizer.",
  "version": "0.1",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "16x16.png",
    "32": "32x32.png",
    "48": "48x48.png",
    "128": "128x128.png"
  },
  "permissions": ["activeTab", "scripting"]
}
